@startuml
!include_many ../common/skin.puml
!include_many actors.puml

activate pos

pos -> mil ++ : PATCH /transactions///<transaction id>///advice
	note left
		__header__
		RequestId: //<request id>//
		Authorization: Bearer //<access token>//
		__body__
		{
			"status": "CLOSED_OK",
			"paymentMethod": "//<payment method>//"
		}
		__//<payment method>//__
		- DOMESTIC_CARD
		- INTERNATIONAL_CARD
		- CASH
		- OTHER
	end note

mil --> pos -- : HTTP 204 (ok)

deactivate pos
@enduml